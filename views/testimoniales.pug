extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center #{pagina}
        blockquote.text-center Lee sobre nuestros clientes
            include ./layout/bloque_testimoniales
        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testiomonial
                if (errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" , method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="tu nombre", name="nombre", class="form-control", value=nombre)
                        .form-group
                            label(for="email") Correo
                            input#nombre(type="text", placeholder="tu correo", name="email", class="form-control", value=email)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje(type="text", placeholder="tu mensaje", name="mensaje", class="form-control", rows=3)= mensaje

                        input.btn.btn-success.btn-block(type="submit")